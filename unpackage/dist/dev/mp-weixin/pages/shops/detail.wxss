.zx-search {
  position: fixed;
  z-index: 1;
  width: 100%;
  top: 0;
  background-image: -webkit-linear-gradient(bottom, #ED4510, #ED4510);
  background-image: linear-gradient(0deg, #ED4510, #ED4510);
}
.zx-body {
  position: fixed;
  top: 100rpx;
  right: 0;
  bottom: 0;
  left: 0;
}
.zx-body .zx-header {
    position: absolute;
    z-index: 1;
    width: 100%;
}
.zx-body .zx-header .zx-info {
      height: 170rpx;
      background-image: -webkit-linear-gradient(bottom, #ff9700, #ff9700, #ED4510);
      background-image: linear-gradient(0deg, #ff9700, #ff9700, #ED4510);
      color: #ffffff;
}
.zx-body .zx-header .zx-info .zx-avatar image {
        border-radius: 20rpx;
        height: 150rpx;
        width: 150rpx;
        border: 6rpx solid #FFFFFF;
}
.zx-body .zx-header .zx-info .zx-avatar .flex-sub {
        line-height: 48rpx;
}
.zx-body .zx-header .zx-info .zx-avatar .zx-phone {
        line-height: 120rpx;
}
.zx-body .zx-header .zx-tab .cu-item {
      padding-left: 30rpx;
      padding-right: 30rpx;
}
.zx-body .zx-swiper {
    width: 100%;
}
.zx-body .zx-swiper .zx-home image {
      display: block;
      width: 100%;
}
.zx-body .zx-swiper .zx-item .zx-filter1 {
      position: absolute;
      width: 100%;
      top: 0;
      z-index: 1;
}
/* 动画效果 */
.zx-show {
  -webkit-animation: show .5s forwards;
          animation: show .5s forwards;
}
.zx-hidden {
  -webkit-animation: hidden .5s forwards;
          animation: hidden .5s forwards;
}
@-webkit-keyframes show {
0% {
    opacity: .5;
    -webkit-transform: translateY(-100rpx);
            transform: translateY(-100rpx);
}
100% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@keyframes show {
0% {
    opacity: .5;
    -webkit-transform: translateY(-100rpx);
            transform: translateY(-100rpx);
}
100% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@-webkit-keyframes hidden {
0% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
100% {
    opacity: 0;
    -webkit-transform: translateY(-100rpx);
            transform: translateY(-100rpx);
}
}
@keyframes hidden {
0% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
100% {
    opacity: 0;
    -webkit-transform: translateY(-100rpx);
            transform: translateY(-100rpx);
}
}

