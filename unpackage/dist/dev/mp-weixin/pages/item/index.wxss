.zx-header {
  position: fixed;
  top: 0;
  z-index: 3;
}
.zx-body {
  position: relative;
  top: 90rpx;
  padding-bottom: 110rpx;
}
.zx-body .zx-swiper {
    height: 750rpx;
}
.zx-body .zx-swiper image {
      width: 100%;
      height: 750rpx;
}
.zx-body .zx-desc .zx-safe {
    float: left;
    display: inline-block;
    padding: 2rpx 10rpx;
    border-radius: 6rpx;
}
.zx-body .zx-desc .zx-title {
    font-size: 30rpx;
    letter-spacing: 1rpx;
}
.zx-body .zx-comment .zx-avatar {
    width: 70rpx;
    height: 70rpx;
}
.zx-body .zx-detail image {
    display: block;
    width: 100%;
}
.zx-foot {
  position: fixed;
  bottom: 8rpx;
  left: 0rpx;
  right: 0rpx;
  padding: 8rpx 20rpx 8rpx 15rpx;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 20rpx 10rpx rgba(0, 0, 0, 0.3);
}
.zx-foot .zx-btn {
    margin-top: 13rpx;
}
.zx-foot .zx-btn .zx-cart {
      padding: 0 20rpx;
}
.zx-sp-modal .zx-model-header image {
  width: 120rpx;
  height: 120rpx;
}
.zx-sp-modal .zx-comfirm {
  width: 100%;
}
.zx-param-modal .zx-title {
  display: inline-block;
}
.zx-param-modal .zx-btn {
  float: right;
}
.zx-param-modal .zx-comfirm {
  width: 100%;
}

