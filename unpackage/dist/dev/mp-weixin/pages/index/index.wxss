.zx-search {
  position: fixed;
  z-index: 1;
  width: 100%;
  top: 0;
  height: 80rpx;
}
.zx-search .bg-gradual-anime {
    position: absolute;
    width: 100%;
    height: 100rpx;
    z-index: -1;
    border-radius: 15rpx 15rpx 15rpx 0;
    background-image: -webkit-linear-gradient(left, #ED0424, #FF7800);
    background-image: linear-gradient(90deg, #ED0424, #FF7800);
    color: #FFFFFF;
}
.zx-search .zx-location {
    display: inline-block;
    max-width: 250rpx;
    height: 52rpx;
}
.zx-body {
  position: relative;
  top: 100rpx;
}
.zx-body .bg-gradual-anime {
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 200rpx;
    background-image: -webkit-linear-gradient(105deg, #f8f8f8, #f8f8f8, #f8f8f8, #ED0424);
    background-image: linear-gradient(-15deg, #f8f8f8, #f8f8f8, #f8f8f8, #ED0424);
}
.zx-body .zx-header {
    width: 100%;
    color: #ffffff;
}
.zx-body .zx-header .zx-swiper {
      height: 220rpx;
      width: 100%;
}
.zx-body .zx-header .zx-swiper image {
        width: 100%;
}
.zx-body .zx-category image {
    height: 100rpx;
}
.zx-body .zx-ad {
    height: 200rpx;
    width: 100%;
    overflow: hidden;
}
.zx-body .zx-sale {
    height: 300rpx;
}
.zx-body .zx-sale .zx-title {
      width: 400rpx;
      border: 3rpx solid #ED0424;
}
.zx-body .zx-sale .zx-title view {
        width: 100%;
}
.zx-body .zx-sale .zx-more {
      height: auto;
}
.zx-body .zx-sale .zx-item {
      padding: 20rpx 10rpx;
}
.zx-body .zx-sale .zx-item image {
        height: 120rpx;
}
.zx-body .zx-shops image {
    width: 150rpx;
    height: 150rpx;
}
/* 动画效果 */
.fadein {
  -webkit-animation: fadein .5s forwards;
          animation: fadein .5s forwards;
}
.fadeout {
  -webkit-animation: fadeout .5s forwards;
          animation: fadeout .5s forwards;
}
@-webkit-keyframes fadeout {
0% {
    opacity: 1;
}
100% {
    opacity: 0;
}
}
@keyframes fadeout {
0% {
    opacity: 1;
}
100% {
    opacity: 0;
}
}
@-webkit-keyframes fadein {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
@keyframes fadein {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}

